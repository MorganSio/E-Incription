{% extends 'base.html.twig' %}

{% block title %}Adhésion à la MDL{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <main role="main" id="content">
        <form method="post" action="{{ path('fiche-mdl') }}">
        <!-- Section 1 -->
        <article id="mdlFirst">
            <div class="fr-container fr-container--fluid fr-mb-md-14v">
                <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--center">
                    <div class="fr-col-12 fr-col-md-10 fr-col-lg-8">
                        <div class="fr-container fr-background-alt--grey fr-px-md-0 fr-pt-10v fr-pt-md-14v fr-pb-6v fr-pb-md-10v">
                            <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--center">
                                <div class="fr-col-12 fr-col-md-10 fr-col-lg-9">
                                    <h1 class="fr-h2">Adhésion à la MDL</h1>
                                    <form id="mdlFirstForm">
                                        <fieldset class="fr-fieldset" id="radio-rich" aria-labelledby="radio-rich-legend radio-rich-messages">
                                            <legend class="fr-fieldset__legend fr-text--regular" id="radio-rich-legend">
                                                Voulez-vous adhérer à la MDL ?
                                            </legend>
                                            <div class="fr-fieldset__element">
                                                <div class="fr-radio-group fr-radio-rich">
                                                    <input value="oui" type="radio" id="acceptYes" name="accepter" required>
                                                    <label class="fr-label" for="acceptYes">
                                                        Oui, j'accepte
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="fr-fieldset__element">
                                                <div class="fr-radio-group fr-radio-rich">
                                                    <input value="non" type="radio" id="acceptNo" name="accepter" required>
                                                    <label class="fr-label" for="acceptNo">
                                                        Non, je refuse
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="fr-form-group">
                                                <button type="button" class="fr-btn" id="validateFirstMdl">Valider</button>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>

        <!-- Section 2 -->
        <article id="mdlSecond">
            <div class="fr-container fr-container--fluid fr-mb-md-14v">
                <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--center">
                    <div class="fr-col-12 fr-col-md-10 fr-col-lg-8">
                        <div class="fr-container fr-background-alt--grey fr-px-md-0 fr-pt-10v fr-pt-md-14v fr-pb-6v fr-pb-md-10v">
                            <div class="fr-grid-row fr-grid-row--gutters fr-grid-row--center">
                                <div class="fr-col-12 fr-col-md-10 fr-col-lg-9">
                                    <h1 class="fr-h2">Adhésion à la MDL</h1>
                                    <form id="mdlSecondForm" method="post">
                                        <!-- Paiement -->
                                        <fieldset class="fr-fieldset" id="radio-rich-payment" aria-labelledby="radio-rich-payment-legend radio-rich-payment-messages">
                                            <legend class="fr-fieldset__legend--regular fr-fieldset__legend" id="radio-rich-payment-legend">
                                                Mode de paiement
                                            </legend>
                                            <p>10€ à l'ordre de la MDL, paiement de préférence par chèque.</p>
                                            <div class="fr-fieldset__element">
                                                <div class="fr-radio-group fr-radio-rich">
                                                    <input value="cheque" type="radio" id="radio-rich-payment-1" name="payment_method" required>
                                                    <label class="fr-label" for="radio-rich-payment-1">
                                                        Chèque
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="fr-fieldset__element">
                                                <div class="fr-radio-group fr-radio-rich">
                                                    <input value="cash" type="radio" id="radio-rich-payment-2" name="payment_method" required>
                                                    <label class="fr-label" for="radio-rich-payment-2">
                                                        Espèces
                                                    </label>
                                                </div>
                                            </div>
                                        </fieldset>

                                        <!-- Droit à l'image -->
                                        <fieldset class="fr-fieldset" id="radio-rich-image" aria-labelledby="radio-rich-image-legend radio-rich-image-messages">
                                            <legend class="fr-fieldset__legend--regular fr-fieldset__legend" id="radio-rich-image-legend">
                                                Autorisation droit à l'image
                                            </legend>
                                            <div class="fr-fieldset__element">
                                                <div class="fr-radio-group fr-radio-rich">
                                                    <input value="authorize" type="radio" id="radio-rich-image-1" name="image_rights" required>
                                                    <label class="fr-label" for="radio-rich-image-1">
                                                        Autorise
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="fr-fieldset__element">
                                                <div class="fr-radio-group fr-radio-rich">
                                                    <input value="do_not_authorize" type="radio" id="radio-rich-image-2" name="image_rights" required>
                                                    <label class="fr-label" for="radio-rich-image-2">
                                                        N'autorise pas
                                                    </label>
                                                </div>
                                            </div>
                                        </fieldset>

                                        <!-- Bouton Valider -->
                                        <div class="fr-form-group">
                                            <button type="button" class="fr-btn" id="validateSecondMdl">Valider</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        </form>
    </main>
{% endblock %}